<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.camunda.tngp</groupId>
  <artifactId>log</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <parent>
    <groupId>org.camunda.tngp</groupId>
    <artifactId>tngp-parent</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <!-- do not remove empty tag - http://jira.codehaus.org/browse/MNG-4687 -->
    <relativePath />
  </parent>


  <properties>
    <version.util>1.0.0-SNAPSHOT</version.util>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.camunda.tngp</groupId>
      <artifactId>dispatcher</artifactId>
      <version>1.0.0-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>org.camunda.tngp</groupId>
      <artifactId>util</artifactId>
      <version>${version.util}</version>
    </dependency>

    <dependency>
      <groupId>org.camunda.tngp</groupId>
      <artifactId>hash-index</artifactId>
      <version>${version.util}</version>
    </dependency>

    <dependency>
      <groupId>org.agrona</groupId>
      <artifactId>agrona</artifactId>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-all</artifactId>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.assertj</groupId>
      <artifactId>assertj-core</artifactId>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.camunda.tngp</groupId>
      <artifactId>test-util</artifactId>
      <version>${version.util}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <profiles>
    <profile>
      <id>sonatype-oss-release</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-gpg-plugin</artifactId>
            <configuration>
              <!-- skip gpg signing as the release is not pushed to maven central -->
              <skip>true</skip>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <scm>
    <url>https://github.com/camunda-tngp/log</url>
    <connection>scm:git:git@github.com:camunda-tngp/log.git</connection>
    <developerConnection>scm:git:git@github.com:camunda-tngp/log.git</developerConnection>
    <tag>HEAD</tag>
  </scm>

</project>
